<%= render 'devise/shared/card' do %>
    <h2 class="text-3xl font-extrabold text-center mb-6 text-gray-800">Create an Account</h2>
    <p class="text-center text-gray-500 mb-8">Sign up to connect with travelers</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,  class: "input-class" %>
      </div>

      <div class="field">
        <%= f.label :username, "Username *", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, autocomplete: "username", required: true,  class: "input-class" %>
      </div>

      <div class="field">
        <%= f.label :first_name, "First Name *", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, autocomplete: "given-name", required: true, class: "input-class" %>
      </div>

      <div class="field">
        <%= f.label :last_name, "Last Name *", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, autocomplete: "family-name", required: true, class: "input-class" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-class" %>
        <% if @minimum_password_length %>
          <p class="mt-2 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-class" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: " w-full brand-btn-primary" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
      <%= render "devise/shared/links" %>
    </div>
<% end %>