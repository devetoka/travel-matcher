<%= render 'devise/shared/card' do %>
  <h2 class="text-3xl font-extrabold text-center mb-6 text-gray-800">Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "input-class" %>
    </div>

    <div class="actions">
      <%= f.submit "Resend confirmation instructions", class: 'brand-btn-primary w-full' %>
    </div>
  <% end %>
  <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
