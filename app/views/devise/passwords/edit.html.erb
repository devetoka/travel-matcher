<%= render 'devise/shared/card' do %>
  <h2 class="text-3xl font-extrabold text-center mb-6 text-gray-800">Change Your Password</h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <% render 'layouts/partials/flash' %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <small><em>(<%= @minimum_password_length %> characters minimum)</em></small><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-class"%>

  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-class "%>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "brand-btn-primary w-full" %>
  </div>
<% end %>

  <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
    <%= render "devise/shared/links" %>
  </div>

<% end %>
