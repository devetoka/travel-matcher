<%= render 'devise/shared/card' do %>
  <h2 class="text-3xl font-extrabold text-center mb-6 text-gray-800">Edit your Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6"  }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300  shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <small><i>(leave blank if you don't want to change it)</i><br /></small>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300  shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>
    <% if @minimum_password_length %>
      <small><em><%= @minimum_password_length %> characters minimum</em></small>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300  shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
    <small><i>(we need your current password to confirm your changes)</i></small>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300  shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "brand-btn-primary w-full"%>
  </div>
<% end %>

<% end %>
